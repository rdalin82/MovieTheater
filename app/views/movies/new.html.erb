<div class="jumbotron">
  <div class="container-fluid">
    <h1>New Movie</h1>
  </div>
</div>
<div class="container-fluid">
  <%= form_for @movie, url: {action: "create"}, html: {class: "input-group"} do |f| %> 
    Movie Name: <%= f.text_field :movie_name %> <br>
    Showtime: <%= f.datetime_local_field :showtime %> <br>
    Minutes: <%= f.text_field :length %> <br>

    <%= f.submit "Submit", {:class=>"btn btn-md btn-info  responsive-width"}%> 
   <% end %> 

</div>